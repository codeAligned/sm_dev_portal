{#
/**
 * @file
 * Theme override for an 'input' #type form element.
 *
 * Available variables:
 * - attributes: A list of HTML attributes for the input element.
 * - children: Optional additional rendered elements.
 *
 * @see template_preprocess_input()
 */
#}

{% if element['#attributes'].type == 'date' %}
	{% set attributes = attributes.removeAttribute('type').setAttribute('type','text').addClass('smdp-input-date') %}
{% endif %}

<div class="input-group with-addon-icon-left">
	{% if element['#attributes'].type == 'date' %}
		<input{{ attributes.addClass('form-control','rounded-0','rounded-sm-left') }} />{{ children }}
	{% else %}
		<input{{ attributes.addClass('form-control') }} />{{ children }}
	{% endif %}

	{% if element['#attributes'].type == 'date' %}
		<span class="input-group-append">
			<span class="input-group-text rounded-0 rounded-sm-right">
				<i class="fas fa-calendar"></i>
			</span>
		</span>
	{% endif %}
</div>

